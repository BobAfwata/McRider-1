<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:sl="http://www.nlog-project.org/schemas/NLog.Targets.Syslog.xsd"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false">

	<targets>
		<target 
			name="file"
			xsi:type="File"
			layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=ToString}"
			fileName="${specialfolder:folder=MyDocuments}/logs.log"
			archiveFileName="${specialfolder:folder=MyDocuments}/logs.{#}.log"
			archiveEvery="Day"
			archiveNumbering="DateAndSequence"
			archiveDateFormat="yyyy-MM-dd"
			archiveAboveSize="10485760"
			maxArchiveFiles="7">
		</target>

		<target
            name="sematext"
            xsi:type="Network"
			address="https://logsene-receiver.sematext.com/ac9774d9-56df-4a3b-b2ca-49bf46dc751f/iOs"
			layout="${message}">
		</target>
	</targets>

	<rules>
		<logger name="*" minlevel="Warn" writeTo="sematext" />
		<logger name="*" minlevel="Trace" writeTo="file" />
	</rules>
</nlog>
