<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="McRider.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:McRider.MAUI"
    xmlns:views="clr-namespace:McRider.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="McRider.MAUI">

    <ShellContent
        ContentTemplate="{DataTemplate views:LoadingPage}"
        Route="LoadingPage" />

    <ShellContent
        ContentTemplate="{DataTemplate views:SliderPage}"
        Route="SliderPage" />

    <ShellContent
        ContentTemplate="{DataTemplate views:LandingPage}"
        Route="LandingPage" />

    <ShellContent
        ContentTemplate="{DataTemplate views:GamesPage}"
        Route="GamesPage" />

    <ShellContent
        ContentTemplate="{DataTemplate views:RegistrationPage}"
        Route="RegistrationPage" />
    
    <ShellContent
        ContentTemplate="{DataTemplate views:MatchupPage}"
        Route="MatchupPage" />

    <ShellContent
        ContentTemplate="{DataTemplate views:StartGamePage}"
        Route="StartGamePage" />    

</Shell>
