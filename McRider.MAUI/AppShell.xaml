<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="McRider.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:McRider.MAUI"
    xmlns:views="clr-namespace:McRider.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="McRider.MAUI">


    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:SliderPage}"
        Route="SliderPage" />
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:LoadingPage}"
        Route="LoadingPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
