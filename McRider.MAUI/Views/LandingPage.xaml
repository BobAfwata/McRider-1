<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="McRider.MAUI.Views.LandingPage"
    
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled">
    <Grid BackgroundColor="{StaticResource White}">
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="header.png" Aspect="AspectFit"/>
        <Image Grid.Row="2" Source="footer.png" Aspect="AspectFit"/>

        <Grid Grid.Row="1"  BackgroundColor="{StaticResource Primary}" Margin="25,0" Padding="80">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0"   Margin="0" Padding="0">

                <Label Text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="{StaticResource Tertiary}" 
                   Margin="100, 40" FontFamily="MontserratBold"
                   FontSize="48"  FontAttributes="Bold" />

                <Image Source="founding_year_transparent.png" WidthRequest="480" Margin="40" />
            </StackLayout>

            <StackLayout Grid.Row="1">
                <Button Text="Take the challenge" Command="{Binding TakeChallengeCommand}"
                    BackgroundColor="{StaticResource Tertiary}" HorizontalOptions="Center" TextColor="{StaticResource Primary}"
                    Padding="80,20" FontSize="40" FontFamily="MontserratBold" CornerRadius="50" />

                <Button Text="Resume incomplete challenge" Command="{Binding ResumeTournamentCommand}"
                    IsVisible="{Binding HasIncompleteTournament}"
                    BackgroundColor="{StaticResource Tertiary}" HorizontalOptions="Center" TextColor="{StaticResource Primary}"
                    Padding="80,20" Margin="10" FontSize="40" FontFamily="MontserratBold" CornerRadius="50" />
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>